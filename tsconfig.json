{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "jsx": "react-jsx",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@root": ["src"],
      "@store": ["src/store/"],
      "@components": ["src/components/"],
      "@areas": ["src/areas/"],
      "@hooks": ["src/hooks/"],
      "@hass": ["src/hass/"],
      "@types": ["types.d.ts"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src", ".d.ts"],
  "exclude": [
    ".parcel-cache",
    "dist",
    "node_modules"
  ]
}